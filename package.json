{
  "name": "platform.react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "i18next": "19.4.5",
    "i18next-browser-languagedetector": "4.2.0",
    "i18next-http-backend": "^1.0.15",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-app-polyfill": "1.0.6",
    "react-dom": "16.13.1",
    "react-feather": "^2.0.8",
    "react-helmet-async": "1.0.6",
    "react-i18next": "11.5.0",
    "react-router": "^6.0.0-alpha.5",
    "react-router-dom": "^6.0.0-alpha.5",
    "react-scripts": "3.4.1",
    "typescript": "3.9.5"
  },
  "scripts": {
    "// --- DEVELOP ---": "",
    "start": "npm-run-all --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "// --- BUILD ---": "",
    "prebuild": "npm run build:tailwind",
    "build": "react-scripts build",
    "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "watch:tailwind": "postcss -w src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "// --- LOCAL SERVE ---": "",
    "preserve": "npm run build",
    "serve": "serve -s build",
    "// --- BUNDLE ANALYZE ---": "",
    "preanalyze": "npm run build",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "// --- RELEASING ---": "",
    "release": "standard-version",
    "// --- TESTING ---": "",
    "test": "react-scripts test",
    "// --- !!! DO NOT EJECT !!! ---": "",
    "eject": "react-scripts eject",
    "// --- CODE STYLE ---": "",
    "check-types": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix .",
    "lint:css": "stylelint src/**/*.css",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint:css lint serve",
    "// --- LOCALIZATION ---": "",
    "i18n-extract": "NODE_ENV=development babel -f .babelrc 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && pretty-quick --staged && lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook && devmoji -e --lint || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "commitiquette"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@types/classnames": "^2.2.10",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/webpack-env": "^1.15.2",
    "autoprefixer": "^9.8.0",
    "babel-plugin-i18next-extract": "^0.7.2",
    "commitiquette": "^1.0.4",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "devmoji": "^2.1.9",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "pretty-quick": "^2.0.1",
    "serve": "^11.3.2",
    "source-map-explorer": "^2.4.2",
    "stylelint": "^13.6.0",
    "stylelint-config-recommended": "^3.0.0",
    "tailwindcss": "^1.4.6",
    "ts-node": "^8.10.2"
  }
}
